# === Core ===
DJANGO_SETTINGS_MODULE=core.settings
ENV=local            # local | staging | production
DEBUG=true           # NEVER true in production
SECRET_KEY=CHANGE_ME__generate_with_get_random_secret_key

# === Hosts / CORS ===
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000

# === Database ===
# Example (Supabase / Railway): postgres://USER:PASSWORD@HOST:PORT/DB
DATABASE_URL=postgres://postgres:postgres@localhost:5432/nebula_local

# === Cache / Queue (optional) ===
REDIS_URL=redis://localhost:6379/0

# === Email ===
# Staging: Mailtrap; Prod: Resend/SendGrid/etc
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_HOST_USER=YOUR_MAILTRAP_USER
EMAIL_HOST_PASSWORD=YOUR_MAILTRAP_PASS
EMAIL_USE_TLS=true
DEFAULT_FROM_EMAIL=nebula-no-reply@yourdomain.com

# === File storage ===
# Option A: Cloudinary
CLOUDINARY_URL=cloudinary://API_KEY:API_SECRET@CLOUD_NAME

# Option B: S3-compatible (leave CLOUDINARY_URL empty if using S3)
AWS_STORAGE_BUCKET_NAME=nebula-assets
AWS_S3_REGION_NAME=eu-west-2
AWS_S3_ENDPOINT_URL=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_CUSTOM_DOMAIN= # e.g. cdn.nebulacodeacademy.com (optional)

# === Third-party ===
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# === Observability ===
SENTRY_DSN=
LOG_LEVEL=INFO

# === Security toggles ===
SECURE_SSL_REDIRECT=false
SESSION_COOKIE_SECURE=false
CSRF_COOKIE_SECURE=false

# === Misc ===
# Comma-separated list: e.g. achievements,dashboards,news
ENABLED_APPS=
